{
    "version": 2,
    "builds": [
      {
        "src": "app/**/*.ts",
        "use": "@vercel/node"
      },
      {
        "src": "api/**/*.ts",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1.ts"
      },
      {
        "src": "/(.*)",
        "dest": "/app/$1"
      }
    ]
  }
  